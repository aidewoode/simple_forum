<div class="modal fade bs-example-modal-sm signup-login-form" id="loginForm" role="dialog" aria-labelledby="loginFormLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times; </span>
        </button>
        <p class="modal-title" id="loginFormLabel">Login</p>
      </div>

      <div class="modal-body">
        <form {{action "login" on="submit"}}>
          <div class="form-group">
            {{input value=email class="form-control" placeholder="Email Address" }}
          </div>
          <div class="form-group">
            {{input value=password class="form-control" type="password" placeholder="Password"}}
          </div>
          <button type="submit" data-loading-text="Login..." autocomplete="off" id="loginButton" class="btn btn-block">Login</button>
          
        </form>
      </div>
      <div class="modal-footer">
        {{#if hasError}}
          {{errorMessage}}
        {{/if}}
      </div>

    </div>
  </div>
</div>
