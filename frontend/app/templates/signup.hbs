<div class="modal fade bs-example-modal-sm signup-login-form" id="signupForm" role="dialog" aria-labelledby="signupFormLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times; </span>
        </button>
        <p class="modal-title" id="signupFormLabel">Signup</p>
      </div>

      <div class="modal-body">
        <form {{action "signup" on="submit"}}>
          <div class="form-group">
            {{input value=name class="form-control" placeholder="Name"}}
          </div>
          <div class="form-group">
            {{input value=email class="form-control" placeholder="Email Address" }}
          </div>
          <div class="form-group">
            {{input value=password class="form-control" type="password" placeholder="Password"}}
          </div>
          <div class="form-group">
            {{input value=password_confirmation class="form-control" type="password" placeholder="Confirm Password"}}
          </div>
          <button id="signupButton" data-loading-text="Signup..." autocomplete="off" type="submit" class="btn btn-block">Signup</button>
        </form>
      </div>
      <div class="modal-footer">
      </div>

    </div>
  </div>
</div>
