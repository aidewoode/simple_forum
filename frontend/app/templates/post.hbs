<div class="container all-contents">
<div class="post-title {{post-class-name model.top isEssence=model.essence}}">
  <div class="pull-right avatar">
    <img class="img-responsive img-circle" src={{model.userAvatar}} alt="avatar">
  </div>
  <h1>{{model.title}}</h1>
  <hr />
  <div class="post-info">
    {{#link-to index}}{{model.tag}}{{/link-to}}
    <span>由</span>
    {{#link-to "user.posts" model.postUserName}}{{model.postUserName}}{{/link-to}}
    <span>发表.</span>
    {{date-format model.created_at}}

  </div>
  <div class="clearfix"></div>
</div>
<div class="entry post-body">
  {{model.body}}
</div>
  {{#if isAuthenticated}}
  <button  class="center-block btn btn-default normal-button" {{action "transToCommentMode" model }} data-toggle="modal" data-target="#newPostForm" >Post a comment</button>
  {{else}}
    <div class="static-alert container-fluid">
      You must <a href="#" data-toggle="modal" data-target="#loginForm">login</a> or  <a href="#" data-toggle="modal" data-target="#signupForm">signup</a> to post a comment
    </div>
  {{/if}}
  {{outlet}}

</div>
