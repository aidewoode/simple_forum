<div class="container all-contents">
<div class="post-title {{post-class-name model.top isEssence=model.essence}}">
  <div class="pull-right avatar">
    <img class="img-responsive img-circle" src={{model.userAvatar}} alt="avatar">
  </div>
  <h1>{{model.title}}</h1>
  <hr />
  <div class="post-info">
    {{#link-to index}}{{model.tag}}{{/link-to}}
    <span>由</span>
    {{#link-to "user.posts" model.user_id}}{{model.postUserName}}{{/link-to}}
    <span>发表.</span>
    {{date-format model.created_at}}

    {{#if isCurrentUser}}
    <span>. </span>
    <a href="#" {{action "editPost"}} data-toggle="modal" data-target="#editor">
    <span class="glyphicon glyphicon-pencil edit-icon" aria-hidden="true"></span>
    </a>
    {{/if}}

    {{#if currentUser.admin}}
    <span>. </span>
    <a href="#" {{action "setDeleteMode" "deletePost" model}} data-toggle="modal" data-target="#delete-confirm">
      <span class="glyphicon glyphicon-trash delete-icon" aria-hidden="true"></span>
    </a>
    {{/if}}

  </div>
  <div class="clearfix"></div>
</div>
<div class="entry post-body">
  {{model.body}}
</div>
  {{outlet}}

</div>
